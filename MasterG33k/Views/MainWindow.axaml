                                </Path.Data>
                            </Path>
                        </Viewbox>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="0" Background="Black">
                <Image x:Name="AmbientDisplay"
                       Source="{Binding Display}"
                       Margin="-200,0"
                       Stretch="UniformToFill"
                       Opacity="0.6"
                       IsVisible="{Binding Settings.IsAmbientBlurred}">
                    <Image.Effect>
                        <BlurEffect Radius="200" />
                    </Image.Effect>
                </Image>

                <Image x:Name="MainDisplay"
                       Source="{Binding Display}"
                       Stretch="Uniform" />

                <Border Width="16" Height="16"
                        CornerRadius="8"
                        Background="#E53935"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,8,8,0"
                        IsHitTestVisible="False"
                        IsVisible="{Binding IsRecordingIndicatorOn}" />
            </Grid>
        </Grid>
    </dialogHostAvalonia:DialogHost>
</Window>
